<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_selector"
    android:backgroundTint="@color/tabindicatorColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_selector">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/background_selector"
            app:cardCornerRadius="1dp">

            <TextView
                android:id="@+id/cikkszamHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Cikkszám"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="1dp">

            <TextView
                android:id="@+id/desc1Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Megjegyzés1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="204dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="2dp">

            <TextView
                android:id="@+id/desc2Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Megjegyzes2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="306dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="2dp">

            <TextView
                android:id="@+id/mennyisegHeader"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Mennyiség"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="408dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="2dp">>

            <TextView
                android:id="@+id/megjegyzesHeader"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Megjegyzés"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="510dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="2dp">>

            <TextView
                android:id="@+id/bizszamTxt"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>